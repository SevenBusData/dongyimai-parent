<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean class="com.alibaba.druid.pool.DruidDataSource"
          p:url="${jdbc.url}" p:driverClassName="${jdbc.driver}" p:username="${jdbc.username}"
          p:password="${jdbc.password}" id="dataSource">
    </bean>

    <bean class="org.mybatis.spring.SqlSessionFactoryBean"
          p:configLocation="classpath:SqlMapConfig.xml"
          p:dataSource-ref="dataSource" id="sqlSessionFactory"></bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer" p:basePackage="com.xxx.proj.mapper"
          p:sqlSessionFactoryBeanName="sqlSessionFactory"></bean>
</beans>